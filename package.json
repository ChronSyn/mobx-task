{
  "name": "mobx-task",
  "version": "0.2.3",
  "description": "Removes boilerplate of tracking when an async function is running for MobX.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "test": "NODE_ENV=test ava 'test/**/*.test.js'",
    "test:watch": "npm run test -- --watch",
    "build": "rimraf lib && babel src -d lib -s",
    "lint": "esw --fix src/ test/ && prettier --write '{src,test}/**/*.{js,ts}'",
    "lint-watch": "npm run lint -- --watch",
    "cover": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "publish:pre": "npm run lint && npm run build && npm run cover",
    "publish:post": "npm publish && git push --follow-tags",
    "release:prerelease": "npm run publish:pre && npm version prerelease && npm run publish:post",
    "release:patch": "npm run publish:pre && npm version patch && npm run publish:post",
    "release:minor": "npm run publish:pre && npm version minor && npm run publish:post",
    "release:major": "npm run publish:pre && npm version major && npm run publish:post",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "esw --fix",
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffijoe/mobx-task.git"
  },
  "keywords": [
    "async",
    "mobx",
    "state",
    "loading",
    "promise"
  ],
  "author": "Jeff Hansen <jeff@jeffijoe.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffijoe/mobx-task/issues"
  },
  "homepage": "https://github.com/jeffijoe/mobx-task#readme",
  "devDependencies": {
    "autobind-decorator": "^2.1.0",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-watch": "^3.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "mobx": "^4.0.1",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "promise-defer": "^1.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.4"
  },
  "peerDependencies": {
    "mobx": "^4.0.1"
  },
  "ava": {
    "babel": {
      "extends": "test/.babelrc"
    },
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  }
}
